# WordPress .gitignore - ONLY version our customizations

# EXCLUDE EVERYTHING by default
/*

# INCLUDE only these important items:

# Our custom child theme (MOST IMPORTANT)
!/wp-content/
/wp-content/*
!/wp-content/themes/
/wp-content/themes/*
!/wp-content/themes/meup-child/

# Include custom plugins if any
!/wp-content/plugins/
/wp-content/plugins/*
!/wp-content/plugins/custom-*/

# Include must-use plugins if any
!/wp-content/mu-plugins/

# TEST ENVIRONMENT - Include test wp-content customizations
!/test/
/test/*
!/test/wp-content/
/test/wp-content/*
!/test/wp-content/themes/
/test/wp-content/themes/*
!/test/wp-content/themes/meup-child/

# Documentation
!README.md
!SETUP.md
!CHANGELOG.md
!.gitignore

# Deployment scripts (for future)
!deploy/
!webhook/

# === NEVER INCLUDE THESE ===

# WordPress Core (live and test)
wp-admin/
wp-includes/
wp-*.php
index.php
xmlrpc.php
test/wp-admin/
test/wp-includes/
test/wp-*.php
test/index.php
test/xmlrpc.php

# Configuration (contains secrets)
wp-config*.php
test/wp-config*.php

# Uploads and dynamic content (live and test)
wp-content/uploads/
wp-content/upgrade/
wp-content/cache/
wp-content/backup*/
wp-content/ai1wm-backups/
wp-content/w3tc*/
wp-content/advanced-cache.php
test/wp-content/uploads/
test/wp-content/upgrade/
test/wp-content/cache/
test/wp-content/backup*/
test/wp-content/ai1wm-backups/
test/wp-content/w3tc*/
test/wp-content/advanced-cache.php

# Logs and temporary files
*.log
*.tmp
*.temp
*.bak
*.backup
*.sql
*.sql.gz

# System files
.DS_Store
.htaccess*
.user.ini
error_log
debug.log

# Development
.vscode/
.idea/
node_modules/
.env*
